<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="readMapper">

	
	<!-- 게시글 상세보기 -->
	<select id="read" parameterType="int" resultType="BoardVo">
		SELECT
				board_num, 
				member_num,
				content,
				REGDATE, 
				TRIPDATE
		 FROM 
		 		board
		 WHERE 
		 		board_num = #{boardNum}
	</select>


</mapper>